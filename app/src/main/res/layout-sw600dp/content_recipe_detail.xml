    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ssurendran.bakingapp.activities.RecipeStepDetailActivity">

    <FrameLayout
        android:id="@+id/detail_frag_container"
        android:layout_width="@dimen/tablet_details_frag_width"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <FrameLayout
        android:id="@+id/step_detail_frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>